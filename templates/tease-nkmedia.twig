{% extends "tease.twig" %}

{% block content %}
	<div class="flex flex-column md:flex-row p-4 mb-8">
		<div class="w-6/12">
			<div class="flex items-center justify-center rounded-md text-white shadow-lg">
				{% if post.thumbnail.src %}
					<img src="{{ post.thumbnail.src|resize(600) }}" />
				{% endif %}
			</div>
		</div>
		<div class="ml-4">
			<dt class="text-2xl leading-6 font-medium text-gray-900">
				<h2>{{post.title}}</h2>
			</dt>
			<dd class="mt-2 text-base text-gray-500">
				{{post.content}}
			</dd>
		</div>
	</div>
	<div class="p-4 mb-4">
		<hr/>
	</div>
{% endblock %}