{% extends "page.twig" %}

{% block header %}
{% endblock %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<div class="fixed -top-1/2 -left-1/2 w-200 h-200">
					<img src="{{ post.thumbnail.src('full') }}" class="hidden lg:block absolute inset-0 m-auto min-w-1/2 min-h-1/2" />
					<img src="{{ Image(post.tablet_image).src }}" class="hidden sm:block lg:hidden absolute inset-0 m-auto min-w-1/2 min-h-1/2" />
					<img src="{{ Image(post.mobile_image).src }}" class="short-phone:hidden long-phone:block sm:hidden absolute object-cover top-96 right-0 bottom-0 left-40 object-center w-2/3" />
					<img src="{{ Image(post.mobile_image).src }}" class="block long-phone:hidden sm:hidden absolute top-60 right-0 bottom-0 left-40 object-cover object-center w-2/3" />
				</div>
				<div class="absolute inset-0 z-10">
					<div class="flex flex-col lg:flex-row h-full w-full z-20">
						<div class="flex-1 bg-white group bg-opacity-0 hover:bg-opacity-50 relative">
							<a class="block h-full" href="/social-ecologies">
								<div class="absolute flex flex-col top-6 left-1/3 lg:top-1/4 lg:left-0 lg:transform lg:-rotate-90 text-white text-xl md:text-6xl uppercase">
									<div class="bg-indigo-900 bg-opacity-100 p-1 pl-4 mr-24 transform -translate-x-1/2">Social</div>
									<div class="bg-indigo-900 bg-opacity-100 py-1 pl-4 pr-2 transform translate-x-0">Ecologies</div>
								</div>
								<div class="absolute top-2/3 lg:top-1/4 left-8 md:left-2/5 text-black text-opacity-0 group-hover:text-opacity-100">
									<div class="text-xl md:text-2xl font-bold">
										are the goal
									</div>
								</div>
							</a>
						</div>
						<div class="flex-1 bg-white group bg-opacity-0 hover:bg-opacity-50 relative">
							<a class="block h-full" href="/spontaneous-vegetation">
								<div class="absolute flex flex-col top-6 left-1/3 lg:top-2/3 lg:left-0 lg:-right-1/3 lg:transform lg:rotate-90 text-white text-xl md:text-6xl uppercase">
									<div class="bg-indigo-900 bg-opacity-100 p-1 pl-4 mr-1/2 transform -translate-x-0">Spontaneous</div>
									<div class="bg-indigo-900 bg-opacity-100 py-1 pl-4 pr-2 mr-1/2 transform translate-x-1/4">Vegetation</div>
								</div>
								<div class="absolute top-2/3 left-8 md:left-1/4 text-black text-opacity-0 group-hover:text-opacity-100">
									<div class="text-xl md:text-2xl font-bold">
										is the strategy
									</div>
								</div>
							</a>
						</div>
					</div>
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}

{% block footer %}
	{{ function('wp_footer') }}
{% endblock %}