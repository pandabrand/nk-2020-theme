{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper m-4 p-4 md:p-8">
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
			{% if post.thumbnail.src %}
				<img class="mb-8" src="{{ post.thumbnail.src|resize(1200, 300) }}">
			{% endif %}
			<section class="article-content">
				<h1 class="article-h1 text-3xl mb-12">{{ post.title }}</h1>
				<a href="{{ post.link }}">{{ _e('edit') }}</a>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
