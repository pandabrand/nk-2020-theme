	<div class="content-wrapper h-screen w-screen bg-cover bg-no-repeat {{ se_active ? 'bg-center' : 'bg-center-bottom' }}" style="background-image: url({{ post.thumbnail.src('full') }});">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="article-h1 sr-only">{{post.title}}</h1>
				<div class="article-body px-16">
					<div class="flex {{ se_active ? 'justify-start' : 'justify-end' }}">
						{# {{post.content}} #}
						{% if se_active %}
							{% set page_menu = se_menu %}
						{% else %}
							{% set page_menu = sv_menu %}
						{% endif %}
						{% include "menu.twig" with {'items': page_menu.get_items} %}
					</div>
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
