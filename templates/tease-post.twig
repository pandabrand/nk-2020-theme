{% extends "tease.twig" %}

{% block content %}
	<article class="flex flex-col m-4 p-8">
		<div><h2 class="text-3xl"><a href="{{post.link}}">{{post.title}}</a></h2></div>
		<div>
			<p>{{post.preview.length(50)}}</p>
			{% if post.thumbnail.src %}
				<img src="{{post.thumbnail.src|resize(300)}}" />
			{% endif %}
		</div>
	</article>
{% endblock %}